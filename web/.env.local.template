# YOU+ Web Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# SUPABASE (Database & Auth)
# =============================================================================
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# Auth redirect URL (change per environment)
NEXT_PUBLIC_SUPABASE_AUTH_REDIRECT_URL=http://localhost:3000

# =============================================================================
# BACKEND API
# =============================================================================
# Local development: http://localhost:8787
# Staging: https://api-staging.youplus.app
# Production: https://api.youplus.app
NEXT_PUBLIC_API_URL=http://localhost:8787

# =============================================================================
# REVENUECAT (Payment Processing)
# =============================================================================
# Get from: https://app.revenuecat.com/settings/api-keys
NEXT_PUBLIC_REVENUECAT_API_KEY=your-api-key

# =============================================================================
# SENTRY (Error Monitoring) - OPTIONAL FOR LOCAL DEV
# =============================================================================
# Get from: https://sentry.io/settings/projects/
# NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project-id
# NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================
# NEXT_PUBLIC_ENABLE_ANALYTICS=false
# NEXT_PUBLIC_TRIAL_DURATION_DAYS=7
